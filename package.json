{
  "name": "cohousing-graphql-api",
  "version": "1.0.0",
  "description": "GraphQL API for Cohousing",
  "main": "src/index.js",
  "repository": "https://github.com/cohousing/cohousing-graphql-api",
  "author": "Frank Bille-Stauner <frank@cohousing.nu>",
  "license": "GPL-3.0",
  "scripts": {
    "start": "nodemon src/index.js --exec babel-node --presets es2015,stage-2 -i *.graphqls",
    "build": "rimraf dist && babel src -d dist --source-maps inline --copy-files",
    "build-watch": "babel src -d dist --watch --source-maps inline --copy-files",
    "build-docker": "yarn build && docker build -t cohousing/cohousing-graphql-api .",
    "test": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "./dist"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "dependencies": {
    "apollo-errors": "^1.5.1",
    "apollo-server-express": "^1.1.0",
    "async": "^2.6.0",
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "dataloader": "^1.3.0",
    "dataloader-sort": "^0.0.5",
    "express": "^4.15.4",
    "graphql": "^0.10.5",
    "graphql-tools": "^1.1.0",
    "jsonwebtoken": "^7.4.2",
    "knex": "^0.13.0",
    "lodash": "^4.17.4",
    "mariasql": "^0.2.6",
    "moment": "^2.19.3"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "jest": "^22.0.4",
    "jest-cli": "^22.0.4",
    "jest-junit": "^3.4.1",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1"
  }
}
